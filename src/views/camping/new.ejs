<%- include("../partials/header.ejs") %>
<form action="/camping" method="post" class="mx-auto w-50">
    <h2 class="mb-3 text-center">Create new camp site</h2>
    <div class="form-group">
        <input class="form-control" type="text" name="name" placeholder="Camp name">
    </div>
    <div class="form-group">
        <input class="form-control" type="text" name="image" placeholder="Image URL">
    </div>
    <div class="form-group">
        <input class="form-control" type="number" value="10" name="price" min="10" step="0.5">
    </div>
    <div class="form-group">
        <input class="form-control" type="text" name="description" placeholder="Description">
    </div>
    <button class="btn btn-primary">Submit</button>
</form>
<%- include("../partials/footer.ejs") %>