<%- include("../partials/header") %>
<div class="container">
    <header class="mt-3 jumbotron">
        <h1>Camping page</h1>
        <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Explicabo, neque.</p>
        <p>
            <a  class="btn btn-primary" href="/camping/new">Add new camp</a>
        </p>
    </header>
    <div class="row text-center">
        <% campings.forEach(function(camping) { %>
            <div class="col-md-3 col-sm-2">
                <div class="img-thumbnail mb-2">
                    <img src="<%= camping.image %>" class="img-fluid">
                    <div class="caption">
                        <h4><%= camping.name %></h4>
                    </div>
                    <a class="btn btn-primary text-light btn-sm" href="/camping/<%= camping._id %>">Details</a>
                </div>
            </div>
        <% }) %>
    </div>
</div>
<%- include("../partials/footer") %>